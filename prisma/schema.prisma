generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid())
  login       String        @unique
  name        String
  password    String
  expense     Expense[]
  expenseType ExpenseType[]
}

model ExpenseType {
  id          String    @id @default(uuid())
  name        String    @unique
  description String?
  userId      String
  expense     Expense[]

  user User @relation(fields: [userId], references: [id])
}

model Expense {
  id          String    @id @default(uuid())
  userId      String
  typeId      String
  price       Float
  description String?
  date        DateTime  @default(now())
  closingDate DateTime?

  user User        @relation(fields: [userId], references: [id])
  type ExpenseType @relation(fields: [typeId], references: [id])
}
